<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="f_devs_locale.admin_translation.class">FDevs\LocaleBundle\Sonata\Admin\TranslationAdmin</parameter>
        <parameter key="f_devs_locale.admin.groupname">Locale</parameter>
        <parameter key="f_devs_locale.admin.label_catalogue">FDevsLocaleBundle</parameter>
        <parameter key="f_devs_locale.admin.translation_domain">FDevsLocaleBundle</parameter>
        <parameter key="f_devs_locale.model_contact.class">FDevs\Locale\Model\Translation</parameter>
    </parameters>

    <services>

        <service id="f_devs_locale.admin.translation" class="%f_devs_locale.admin_translation.class%">
            <tag name="sonata.admin" label_catalogue="%f_devs_locale.admin.label_catalogue%"
                 manager_type="doctrine_mongodb" group="%f_devs_locale.admin.groupname%" label="label.translation"/>
            <argument/>
            <argument>%f_devs_locale.model_contact.class%</argument>
            <argument/>
            <call method="setTrans">
                <argument id="translator.default" type="service"/>
                <argument key="cache_dir">%kernel.cache_dir%/translations</argument>
            </call>
        </service>

    </services>

</container>
