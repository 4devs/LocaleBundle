<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="f_devs_locale.twig_extension.class">FDevs\LocaleBundle\Twig\TranslatorExtension</parameter>
    </parameters>

    <services>
        <service id="f_devs_locale.twig_extension" class="%f_devs_locale.twig_extension.class%" public="false">
            <argument type="collection"/>
            <call method="setContainer">
                <argument type="service" id="service_container" on-invalid="null"/>
            </call>
            <tag name="twig.extension"/>
        </service>

    </services>

</container>
