<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="f_devs_locale.form.type.locale_text.class">FDevs\Locale\Form\Type\LocaleTextType</parameter>
        <parameter key="f_devs_locale.form.type.translatable.class">FDevs\Locale\Form\Type\TranslatableType</parameter>
    </parameters>

    <services>

        <service id="f_devs_locale.form.type.translatable" class="%f_devs_locale.form.type.translatable.class%">
            <tag name="form.type" alias="fdevs_translatable"/>
            <call method="setLocales"><argument>%f_devs_locale.allowed_locales%</argument></call>
        </service>

        <service id="f_devs_locale.form.type.locale_text" class="%f_devs_locale.form.type.locale_text.class%">
            <tag name="form.type" alias="fdevs_locale_text"/>
            <argument>text</argument>
        </service>

        <service id="f_devs_locale.form.type.locale_textarea" class="%f_devs_locale.form.type.locale_text.class%">
            <tag name="form.type" alias="fdevs_locale_textarea"/>
            <argument>textarea</argument>
        </service>

    </services>
</container>
