<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="f_devs_locale.translation_class_name">FDevs\Locale\Model\Translation</parameter>
        <parameter key="f_devs_locale.translation.loader.mongodb.class">FDevs\LocaleBundle\Translation\Loader\MongodbLoader</parameter>
    </parameters>

    <services>
        <service id="f_devs_locale.model_manager" class="Doctrine\ODM\MongoDB\DocumentManager" public="true">
            <factory service="doctrine_mongodb" method="getManager"/>
            <argument>%f_devs_locale.model_manager_name%</argument>
        </service>

        <service id="f_devs_locale.translation.loader.mongodb" class="%f_devs_locale.translation.loader.mongodb.class%">
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
            <tag name="translation.loader" alias="mongodb" />
        </service>

    </services>

</container>
